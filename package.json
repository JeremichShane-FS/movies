{
  "name": "movies",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "install-client": "npm install --prefix client",
    "install-api": "npm install --prefix api",
    "build-client": "npm run build --prefix client",
    "heroku-postbuild": "concurrently \"npm:install-*\" \"npm:build-*\"",
    "start": "node api/server.js",
    "start:local": "node --env-file=.env api/server.js",
    "dev:react": "concurrently --raw \"npm run api\" \"npm run react\"",
    "react": "cd client && npm run dev",
    "api": "cd api && npx nodemon --env-file=.env server.js"
  },
  "dependencies": {
    "concurrently": "^9.0.1"
  }
}
